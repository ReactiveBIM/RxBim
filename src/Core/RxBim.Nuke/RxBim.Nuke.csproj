<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <NoWarn>NU1702;SA1200</NoWarn>
        <Nullable>enable</Nullable>
        <AssemblyName>$(MSBuildProjectName).$(ApiVersion)</AssemblyName>
        <Configurations>Debug;Release</Configurations>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BimLab.Nuke.Nuget" Version="2022.4.0-dev001" />
        <PackageReference Include="InnoSetup.ScriptBuilder" Version="1.3.0-rc01" />
        <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
        <PackageReference Include="Tools.InnoSetup" Version="6.2.1" IncludeAssets="All" />
        <PackageReference Include="Nuke.Common" Version="6.1.2">
            <Aliases>nc</Aliases>
        </PackageReference>
        <PackageReference Include="SharpCompress" Version="0.32.1" />
        <PackageReference Include="CommandLineParser" Version="2.9.1" />
        <PackageReference Include="System.Reflection.Metadata" Version="6.0.1" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Builders\uninstall.pas" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Directory.Build.Props" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Directory.Build.Props" />
    </ItemGroup>

    <ItemGroup>
      <Compile Include="..\RxBim.Di\EnvironmentRegistryConstants.cs">
        <Link>EnvironmentRegistryConstants.cs</Link>
      </Compile>
    </ItemGroup>

    <PropertyGroup>
        <Version>$(ApiVersion)</Version>
        <Description>RxBim nuke plugin for building MSI</Description>
        <PackageId>RxBim.Nuke</PackageId>
    </PropertyGroup>

</Project>
